{
	"name": "nitro-better-auth",
	"type": "module",
	"version": "0.2.0",
	"packageManager": "pnpm@10.18.3",
	"author": "zhong666 <hi@zhong666.me>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/aa900031/nitro-better-auth"
	},
	"keywords": [
		"nitro",
		"better-auth",
		"auth",
		"nitro-module"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"import": "./dist/index.mjs"
		}
	},
	"main": "./dist/index.mjs",
	"typesVersions": {
		"*": {
			".": [
				"./dist/index.d.mts"
			]
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"postinstall": "unbuild --stub",
		"build": "unbuild",
		"dev": "unbuild --stub && nitro dev --dir playground",
		"release": "release-it",
		"lint": "eslint .",
		"test": "vitest run",
		"test:ci": "vitest run --coverage.provider=istanbul --reporter=junit --outputFile.junit=./reports/junit.xml",
		"test:watch": "vitest watch",
		"test:types": "tsc --noEmit"
	},
	"peerDependencies": {
		"better-auth": "^1.2.0",
		"nitropack": "^2.11.13"
	},
	"dependencies": {
		"chokidar": "catalog:deps",
		"defu": "catalog:deps",
		"knitwork": "catalog:deps",
		"pathe": "catalog:deps"
	},
	"devDependencies": {
		"@aa900031/eslint-config": "catalog:dev",
		"@aa900031/release-it-config": "catalog:dev",
		"@types/node": "catalog:types",
		"@vitest/coverage-istanbul": "catalog:dev",
		"better-auth": "catalog:peer",
		"eslint": "catalog:dev",
		"nitropack": "catalog:peer",
		"release-it": "catalog:dev",
		"typescript": "catalog:types",
		"unbuild": "catalog:dev",
		"vitest": "catalog:dev"
	}
}
